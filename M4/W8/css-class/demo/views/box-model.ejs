        <a href="#" class="a-inline">inline</a>
      </div>
      <br>
    </section>

    <hr>
    <br>

    <!-- INLINE-BLOCK -->
    <section>
      <br>
      <h1>Inline-Block</h1>
      <br>
      <div class="inline-block-elements">
        <h4>Inline-Block Elements</h4>
        <ul>
          <li>best of both worlds (img)</li>
          <li>can be placed on the same line as other elements</li>
          <li>can assign height and width</li>
        </ul>
